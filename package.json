{
  "name": "toy-robot",
  "version": "1.0.0",
  "description": "Toy robot simulator - challenge",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "node build/index.js",
    "start:backend": "npm run backend:lint && ts-node-dev ./backend/src/index.ts",
    "start:frontend": "cd frontend && npm run start",
    "prebuild": "npm run backend:lint",
    "build": "npm run build:frontend && npm run build:backend",
    "build:backend": "rm -Rf ./build && tsc",
    "build:frontend": "cd frontend && npm install && npm run build",
    "backend:lint": "tslint -c tslint.json -p tsconfig.json --fix"
  },
  "cacheDirectories": [
    "node_modules",
    "frontend/node_modules"
  ],
  "dependencies": {
    "express": "^4.16.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guilhermehkr/toy-robot"
  },
  "author": "guilhermehkr",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.8",
    "ts-node-dev": "^1.0.0-pre.63",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  }
}
